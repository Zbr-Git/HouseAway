<% layout("/layouts/boilerplate")-%>
<script>
  const mapToken = '<%= process.env.MAP_TOKEN %>';
  const listing = <%- JSON.stringify(listing) %>;
</script>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card listing-card col-8 offset-2 show-card">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body mt-3">
      <span class="card-text"
        ><b>Owned by:</b> <%= listing.owner.username %></span
      ><br />
      <span class="card-text"
        ><b>Description:</b> <%= listing.description %></span
      ><br />
      <span class="card-text">
        <b>Price:</b> â‚¨<%= listing.price.toLocaleString("en-PK") %> </span
      ><br />
      <span class="card-text"><b>Location:</b> <%= listing.location %></span
      ><br />
      <span class="card-text"><b>Country:</b> <%= listing.country %></span
      ><br />
      <span class="card-text">
        <b>Category:</b>
        <span class="badge bg-primary"> <%= listing.category %></span>
      </span>
    </div>
  </div>
  <% if(currentUser && currentUser._id.equals(listing.owner._id)) {%>
  <div class="btns mb-3 col-8 offset-2">
    <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn">Edit</a>

    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
      <button class="btn btn-dark ms-2">Delete</button>
    </form>
  </div>
  <% } %>

  <div class="col-8 offset-2 mb-3">
    <% if(currentUser){ %>
    <hr />
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <!-- <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          name="review[rating]"
          class="form-range"
          min="1"
          max="5"
          step="1"
          id="ratingRange"
          oninput="updateRating(this.value)"
        />
        <div id="ratingValue" class="text-center mt-2 fw-bold text-success">
          1
        </div>
      </div> -->
      <div class="mb-3 mt-2">
        <fieldset class="starability-basic">
          <legend>rating</legend>
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          required
          name="review[comment]"
          id="comment"
          cols="30"
          rows="3"
          class="form-control"
        ></textarea>
        <div class="valid-feedback">Comment looks good!</div>
        <div class="invalid-feedback">Comment is required.</div>
      </div>
      <button type="submit" class="btn btn-outline-dark">Submit</button>
    </form>

    <% } %>

    <!-- All Reviews -->
    <% if(listing.reviews.length > 0) { %>
    <hr />
    <div class="row mt-3">
      <h4>All Reviews</h4>
      <% for(review of listing.reviews){ %>
      <div class="col-12 col-md-6 mb-3">
        <div class="card">
          <div class="card-body mt-3 mb-3 mx-3">
            <h5 class="card-title">
              <i class="fas fa-user"></i> <%= review.author.username %> <%
              if(currentUser && currentUser._id.equals(review.author._id)) { %>
              <div class="dropdown float-end">
                <button
                  class="btn btn-sm btn-light dropdown-toggle"
                  type="button"
                  id="dropdownMenuButton-<%= review._id %>"
                  data-bs-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  <i class="fas fa-ellipsis-v"></i>
                </button>

                <ul
                  class="dropdown-menu dropdown-menu-end"
                  aria-labelledby="dropdownMenuButton-<%= review._id %>"
                >
                  <li>
                    <form
                      method="POST"
                      action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                      class="d-inline"
                    >
                      <button type="submit" class="dropdown-item">
                        Delete
                      </button>
                    </form>
                  </li>
                </ul>
              </div>
              <% } %>
            </h5>
            <p
              class="starability-result card-text"
              data-rating="<%= review.rating %>"
            >
              Rated: 3 stars
            </p>
            <p class="card-text">
              <i class="fa-regular fa-comment-dots"></i> <%= review.comment %>
            </p>
          </div>
        </div>
      </div>
      <% } %>
    </div>
    <% } %>
    <hr />
  </div>
  <div class="col-12 col-md-6 offset-2 mb-3">
    <h5>Where you'll be</h5>
    <div id="map"></div>
  </div>
</div>

<script src="/js/map.js"></script>
